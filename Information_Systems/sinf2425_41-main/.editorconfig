# Root of the EditorConfig
root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Specific rules for Markdown files
[*.md]
trim_trailing_whitespace = false

# Specific rules for Python files
[*.py]
indent_size = 4

# Specific rules for JavaScript and TypeScript
[*.{js,ts}]
indent_size = 2
