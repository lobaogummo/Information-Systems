          "rawQuery": true,
          "rawSql": "-- 1) DML de add/edit/delete\r\nDO $$\r\nBEGIN\r\n  IF '${action}' = 'delete'\r\n     AND NULLIF('${actuator_id}','') IS NOT NULL\r\n  THEN\r\n    DELETE FROM dinasore.actuator\r\n    WHERE actuator_id = NULLIF('${actuator_id}','')::integer;\r\n  END IF;\r\n\r\n  IF '${action}' = 'edit'\r\n     AND NULLIF('${actuator_id}','') IS NOT NULL\r\n  THEN\r\n    UPDATE dinasore.actuator\r\n    SET\r\n      type       = COALESCE(NULLIF('${actuator_type}',''),    type),\r\n      estado     = CASE WHEN '${actuator_estado}' = 'true'  THEN TRUE\r\n                        WHEN '${actuator_estado}' = 'false' THEN FALSE\r\n                        ELSE estado END,\r\n      rule_id    = COALESCE(NULLIF('${actuator_rule_id}','')::integer, rule_id),\r\n      station_id = COALESCE(NULLIF('${actuator_station_id}','')::integer, station_id)\r\n    WHERE actuator_id = NULLIF('${actuator_id}','')::integer;\r\n  END IF;\r\n\r\n  IF '${action}' = 'add'\r\n     AND NULLIF('${actuator_type}','') IS NOT NULL\r\n  THEN\r\n    INSERT INTO dinasore.actuator(type,estado,rule_id,station_id)\r\n    VALUES(\r\n      '${actuator_type}',\r\n      CASE WHEN '${actuator_estado}' = 'true' THEN TRUE ELSE FALSE END,\r\n      NULLIF('${actuator_rule_id}','')::integer,\r\n      NULLIF('${actuator_station_id}','')::integer\r\n    );\r\n  END IF;\r\nEND\r\n$$;\r\n\r\n-- 2) Consulta principal (s√≥ leitura)\r\nSELECT\r\n  CASE WHEN '${action}' = 'add' THEN NULL ELSE a.actuator_id END AS actuator_id,\r\n  COALESCE(NULLIF('${actuator_type}',''),    a.type)       AS actuator_type,\r\n  CASE\r\n    WHEN '${action}' = 'add'  THEN (CASE WHEN '${actuator_estado}' = 'true'  THEN TRUE ELSE FALSE END)\r\n    WHEN '${action}' = 'edit' THEN (CASE WHEN '${actuator_estado}' = 'true'  THEN TRUE\r\n                                         WHEN '${actuator_estado}' = 'false' THEN FALSE\r\n                                         ELSE a.estado END)\r\n    ELSE a.estado\r\n  END                                                         AS actuator_estado,\r\n  COALESCE(NULLIF('${actuator_rule_id}','')::integer, a.rule_id)     AS actuator_rule_id,\r\n  COALESCE(NULLIF('${actuator_station_id}','')::integer, a.station_id) AS actuator_station_id\r\nFROM dinasore.actuator a\r\nWHERE\r\n     '${action}' = 'view'    -- em VIEW, traz tudo\r\n  OR '${action}' = 'add'     -- em ADD, tamb√©m n√£o filtra\r\n  OR (\r\n       '${action}' IN ('edit','delete')\r\n       AND a.actuator_id = NULLIF('${actuator_id}','')::integer\r\n     )\r\nORDER BY a.actuator_id;\r\n",
